pipeline {
    
    agent any
    stages {
        stage('Build step1') {
            steps {
                echo 'this step is bulding app'
                cat file1
                
            }
        }
        
        stage ('test') {
            steps  {
                echo 'now running the final test'
                fileExists 'pra99'
                echo ' succeess'
                
            
            }
        }
        
        stage ('deploy') {
            steps {
                echo 'finally deploying the code'
            }
            
        }
    
    }
    
}